        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTHWindow"
        mc:Ignorable="d"
        Title="{StaticResource AppTag}" Height="450" Width="800" Icon="../../LTH_logo_final_JPEG.ico">
    
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="{StaticResource AppVersion}" />
        
