<Window x:Class="LTHWindow.Windows.CreateNew.CreateNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LTHWindow"
        mc:Ignorable="d"
        Title="New Tournament" Height="300" Width="500"  ResizeMode="NoResize" Icon="../../LTH_logo_final_JPEG.ico">
    
    <Grid LayoutUpdated="UIElement_OnLayoutUpdated">
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ContentPresenter Name="ContentHolder" />
            <Separator Height="20" Opacity="0"/>
            <!-- Interactions buttons -->
            <DockPanel>
                <Button Name="BackButton" Click="BackButton_OnClick" MaxWidth="35" Visibility="Collapsed" DockPanel.Dock="Left">Back</Button>
                <Button Name="NextButton" Click="NextButton_OnClick" MaxWidth="35" IsEnabled="False" DockPanel.Dock="Right">Next</Button>
            </DockPanel>
        </WrapPanel>
    </Grid>
</Window>
