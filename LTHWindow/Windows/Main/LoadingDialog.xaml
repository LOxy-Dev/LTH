<Window x:Class="LTHWindow.Windows.Main.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LTHWindow.Windows.Main"
        mc:Ignorable="d"
        Title="Loading" Height="225" Width="300" ResizeMode="NoResize">
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Name="ActionText" HorizontalAlignment="Center">None</TextBlock>
            <ProgressBar Name="ProgressBar" HorizontalAlignment="Center" Width="100" Height="20"></ProgressBar>
        </WrapPanel>
    </Grid>
</Window>
