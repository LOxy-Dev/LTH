<Application x:Class="LTHWindow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LTHWindow"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- Application information -->
        <system:String x:Key="AppName">LAN Tournament Helper GUI</system:String>
        <system:String x:Key="AppVersion">V dev 1.0</system:String>
        <system:String x:Key="AppTag">LTH</system:String>
        
        <!-- Tournament Types -->
        <x:Array x:Key="TournamentTypes" Type="system:String">
            <system:String>Championship format</system:String>
            <system:String>Direct elimination</system:String>
            <system:String>Multi rounds</system:String>
        </x:Array>
        
        <!-- Score Objective -->
        <x:Array x:Key="ScoreObjective" Type="system:String">
            <system:String>First to</system:String>
            <system:String>Best of</system:String>
        </x:Array>
    </Application.Resources>
</Application>
